<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="adnet_elitecenter_list_view_inherit" model="ir.ui.view">
        <field name="name">adnet.elitecenter.sale.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority">19</field>     
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']" position="before">
                <page string="Logitistica Elitecenter">
                    <field string="Tipo de operaciom" name="state_op"/>
                    <field string="Tipo de SAC" name="sac_type"/>
                </page>
            </xpath>
        </field>
    </record>

    <record id="adnet_elitecenter_sale_inherit_search" model="ir.ui.view">
        <field name="name">adnet.elitecentersale.order.search.filter</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="SAC" name="state_op" domain="[('state_op', '=', 'SAC')]"/>
                <filter string="RMA" name="state_op" domain="[('state_op', '=', 'RMA')]"/>
            </xpath>
        </field>
    </record>


</odoo>
